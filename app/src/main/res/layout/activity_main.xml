<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonDemo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEMO 1 SIMPLE DIALOG" />

    <Button
        android:id="@+id/buttonDemo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEMO 2 BUTTONS DIALOG" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonDemo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEMO 3 TEXT INPUT DIALOG" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <Button
        android:id="@+id/buttonExercise3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXERCISE 3" />
    <TextView
        android:id="@+id/textViewExercise3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <Button
        android:id="@+id/buttonDemo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEMO 4 DATE PICKER DIALOG" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <Button
        android:id="@+id/buttonDemo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEMO 5 TIME PICKER DIALOG" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


</LinearLayout>